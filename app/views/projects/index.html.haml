%article.project
  %header
    %h1 Exciting Projects
    %h2 Stuff people are brewing, meant to inspire.

  = render 'shared/messages'

  - if @projects.empty?
    %section
      .guide
        %p Uh oh, looks like everyone's gotten lazy ;)
        %form{ action: '/projects/new' }
          %input{ type: 'submit', value: 'Be the first one to inspire!' }
  - else
    = select('project', 'sort', sort_type)
    #sorted{ style: 'display: none' }
    #normal
      = render 'projects_list'
