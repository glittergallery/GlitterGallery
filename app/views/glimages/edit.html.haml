- content_for :title do
  Updating 
  = @glimage.file

.center
  %h2
    Updating
    = @glimage.file

  #current
    Currently
    = link_to url_for(@glimage) do
      %img{:src => @glimage.thumbnail('imagepath')}

  #upload
    = form_for @glimage do |f|
      #upload_widget
        .fakeupload
          %input{:name => 'fakeupload', :type => 'text', :placeholder => 'Choose an SVG mockup file'}
          = f.file_field :file
        = f.submit 'Save'
